# MoMo Merchant App - Environment Configuration
# Copy this file to .env and fill in your production values

# ===========================================
# API CONFIGURATION
# ===========================================

# Pngme API Configuration
PNGME_API_KEY=your_pngme_api_key_here
PNGME_BASE_URL=https://api.pngme.com/v1
PNGME_TIMEOUT=30000

# Okra API Configuration
OKRA_API_KEY=your_okra_api_key_here
OKRA_BASE_URL=https://api.okra.ng/v2
OKRA_TIMEOUT=30000

# Mono API Configuration
MONO_API_KEY=your_mono_api_key_here
MONO_BASE_URL=https://api.withmono.com/v1
MONO_TIMEOUT=30000

# ===========================================
# APP CONFIGURATION
# ===========================================

# App Environment
NODE_ENV=production
APP_ENV=production

# API Base URLs
API_BASE_URL=https://api.momomerchant.com
STAGING_API_BASE_URL=https://staging-api.momomerchant.com

# ===========================================
# SECURITY CONFIGURATION
# ===========================================

# Encryption Keys (Generate strong random keys)
ENCRYPTION_KEY=your_strong_encryption_key_here_32_chars
JWT_SECRET=your_jwt_secret_here

# Certificate Pinning (for production)
SSL_CERT_PIN=your_ssl_certificate_pin_here

# ===========================================
# MONITORING & ANALYTICS
# ===========================================

# Error Monitoring
SENTRY_DSN=your_sentry_dsn_here
ROLLBAR_ACCESS_TOKEN=your_rollbar_token_here

# Analytics
MIXPANEL_TOKEN=your_mixpanel_token_here
AMPLITUDE_API_KEY=your_amplitude_key_here

# ===========================================
# EXTERNAL SERVICES
# ===========================================

# Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token_here
FCM_SERVER_KEY=your_fcm_server_key_here

# SMS Service (for fallback)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=your_twilio_phone_number_here

# ===========================================
# FEATURE FLAGS
# ===========================================

# Enable/disable features
ENABLE_FRAUD_DETECTION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_PUSH_NOTIFICATIONS=true
ENABLE_BIOMETRIC_AUTH=true

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Debug settings (set to false in production)
ENABLE_CONSOLE_LOGGING=false
ENABLE_DEV_TOOLS=false
ENABLE_MOCK_DATA=false