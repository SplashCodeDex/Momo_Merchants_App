{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local",
    ".env"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "lib/**",
        "index.ts",
        "index.js",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "JWT_SECRET",
        "AWS_REGION"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "JWT_SECRET",
        "AWS_REGION",
        "REDIS_URL"
      ]
    },
    "lint": {
      "inputs": [
        "src/**",
        "lib/**",
        "index.ts",
        "index.js",
        "**/*.config.js",
        "**/*.config.ts",
        ".eslintrc*",
        "eslint.config.*",
        "tsconfig.json",
        "package.json"
      ]
    },
    "lint:fix": {
      "inputs": [
        "src/**",
        "lib/**",
        "index.ts",
        "index.js",
        "**/*.config.js",
        "**/*.config.ts",
        ".eslintrc*",
        "eslint.config.*",
        "tsconfig.json",
        "package.json"
      ]
    },
    "test": {
      "inputs": [
        "src/**",
        "lib/**",
        "index.ts",
        "index.js",
        "**/*.test.*",
        "**/*.spec.*",
        "**/__tests__/**",
        "jest.config.*",
        "vitest.config.*",
        "tsconfig.json",
        "package.json"
      ],
      "outputs": [
        "coverage/**"
      ],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "JWT_SECRET"
      ]
    },
    "test:watch": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "JWT_SECRET"
      ]
    },
    "typecheck": {
      "inputs": [
        "src/**",
        "lib/**",
        "index.ts",
        "index.js",
        "tsconfig.json",
        "package.json"
      ],
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    },
    "deps:check": {
      "cache": false
    },
    "deps:audit": {
      "cache": false
    }
  },
  "globalEnv": [
    "CI",
    "GITHUB_TOKEN",
    "NPM_TOKEN"
  ]
}