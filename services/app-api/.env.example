# MoMo Merchant API - Environment Configuration

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/momo_merchant_db?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
HOST="0.0.0.0"
NODE_ENV="development"

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# Redis Configuration (for rate limiting and sessions)
REDIS_URL="redis://localhost:6379"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Logging
LOG_LEVEL="info"

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR="./uploads"

# External APIs
MOMO_API_BASE_URL="https://api.momo.com"
MOMO_API_KEY="your-momo-api-key"
MOMO_WEBHOOK_SECRET="your-webhook-secret"